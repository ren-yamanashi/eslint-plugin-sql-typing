{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "pnpm test"
          },
          {
            "type": "command",
            "command": "pnpm lint"
          },
          {
            "type": "command",
            "command": "pnpm fmt"
          },
          {
            "type": "command",
            "command": "pnpm check"
          }
        ]
      }
    ]
  }
}
